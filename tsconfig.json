{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es2020",
      "dom"
    ],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "outDir": "dist",
    "types": [
      "node",
      "react"
    ]
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
